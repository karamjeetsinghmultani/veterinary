<p id="notice"><%= notice %></p>

<h1>Listing Customer Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Weight</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_pets.each do |customer_pet| %>
      <tr>
        <td><%= customer_pet.name %></td>
        <td><%= customer_pet.type %></td>
        <td><%= customer_pet.breed %></td>
        <td><%= customer_pet.age %></td>
        <td><%= customer_pet.weight %></td>
        <td><%= customer_pet.date %></td>
        <td><%= link_to 'Show', customer_pet %></td>
        <td><%= link_to 'Edit', edit_customer_pet_path(customer_pet) %></td>
        <td><%= link_to 'Destroy', customer_pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

